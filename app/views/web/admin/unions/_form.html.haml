= simple_form_for @union, :url => url, :html => { :class => 'form-horizontal' } do |f|
  = f.association :category
  = f.input :name
  = f.association :leader
  = f.association :instructors, as: :select2_multi, include_blank: false
  = f.input :description, as: :ckeditor
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel'), admin_unions_path, :class => 'btn'
