= link_to t('.new'), new_admin_menu_item_page_path(resource_menu_item), class: 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      %th= resource_menu_item.pages.human_attribute_name :id
      %th= resource_menu_item.pages.human_attribute_name :title
      %th= resource_menu_item.pages.human_attribute_name :state
      %th
  %tbody.sortable{ data: { 'update-url' => mass_update_order_api_admin_menu_item_pages_path(resource_menu_item) } }
    - @pages.each do |item|
      %tr
        %td= item.id
        %td= item.title
        %td= item.human_state_name
        %td
          .pull-right.btn-group
            = link_to edit_admin_menu_item_page_path(resource_menu_item, item.id), class: 'btn btn-mini' do
              %i.icon-pencil
            = link_to admin_menu_item_page_path(resource_menu_item, item.id), method: :delete,
                                                                              class: 'btn btn-mini btn-danger',
                                                                              data: { confirm: t('.confirm') } do
              %i.icon-trash

