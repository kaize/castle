= link_to t('.new'), new_admin_category_path, :class => 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      %th= sort_link @q, :id
      %th= sort_link @q, :name
      -#%th= sort_link @q, :description
      %th
  %tbody
    - @categories.each do |item|
      %tr
        %td= item.id
        %td= item.name
        -#%td= item.description
        %td
          .pull-right.btn-group
            = link_to edit_admin_category_path(item), :class => 'btn btn-mini' do
              %i.icon-pencil
            = link_to admin_category_path(item), :method => :delete, :data => { :confirm => t('.confirm') }, :class => 'btn btn-mini btn-danger' do
              %i.icon-trash

= paginate @categories
