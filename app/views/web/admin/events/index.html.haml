.page-header
  %h1=t '.title'

= link_to t('.new'), new_admin_event_path, :class => 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      %th= sort_link @q, :id
      %th= sort_link @q, :name
      %th
  %tbody
    - @events.each do |event|
      %tr
        %td= event.id
        %td= event.name
        %td
          .pull-right.btn-group
            = link_to edit_admin_event_path(event), :class => 'btn btn-mini' do
              %i.icon-pencil
            = link_to admin_event_path(event), :method => :delete, :data => { :confirm => t('.confirm') }, :class => 'btn btn-mini btn-danger' do
              %i.icon-trash

= paginate @events
