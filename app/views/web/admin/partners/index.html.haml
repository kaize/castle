.page-header
  %h1=t '.title'

= link_to t('.new'), new_admin_partner_path, :class => 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      %th= sort_link @q, :id
      %th= sort_link @q, :name
      %th
  %tbody
    - @partners.each do |partner|
      %tr
        %td= partner.id
        %td= partner.name
        %td
          .pull-right.btn-group
            = link_to edit_admin_partner_path(partner), :class => 'btn btn-mini' do
              %i.icon-pencil
            = link_to admin_partner_path(partner), :method => :delete, :data => { :confirm => t('.confirm') }, :class => 'btn btn-mini btn-danger' do
              %i.icon-trash

= paginate @partners
